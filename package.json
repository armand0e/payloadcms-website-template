{
  "name": "@payloadcms/template-website",
  "version": "1.0.0",
  "description": "Website template for Payload",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbo -p 3000",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "migrate": "payload migrate",
    "migrate:status": "payload migrate:status",
    "migrate:reset": "payload migrate:reset",
    "migrate:fresh": "payload migrate:fresh",
    "migrate:create": "payload migrate:create",
    "docker:build": "docker build -t payloadcms-website-template .",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@payloadcms/db-postgres": "^3.60.0",
    "@payloadcms/live-preview-react": "^3.60.0",
    "@payloadcms/next": "^3.60.0",
    "@payloadcms/plugin-form-builder": "^3.60.0",
    "@payloadcms/plugin-nested-docs": "^3.60.0",
    "@payloadcms/plugin-redirects": "^3.60.0",
    "@payloadcms/plugin-search": "^3.60.0",
    "@payloadcms/plugin-seo": "^3.60.0",
    "@payloadcms/richtext-lexical": "^3.60.0",
    "@payloadcms/ui": "^3.60.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.1.0",
    "babel-plugin-react-compiler": "1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "geist": "^1.5.1",
    "graphql": "^16.11.0",
    "jsonwebtoken": "9.0.2",
    "lucide-react": "^0.546.0",
    "next": "^15.5.6",
    "payload": "^3.60.0",
    "payload-admin-bar": "^1.0.7",
    "prism-react-renderer": "^2.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.6",
    "@payloadcms/eslint-config": "^3.28.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/escape-html": "^1.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.20",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.6",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18.20.2 <23.0.0",
    "pnpm": ">=9"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  }
}
